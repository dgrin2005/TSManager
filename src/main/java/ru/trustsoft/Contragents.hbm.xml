<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.trustsoft.Contragents" table="contragents" schema="tsmngr">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="contragentname">
            <column name="contragentname" sql-type="text"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text" not-null="true"/>
        </property>
        <set name="basesById" inverse="true">
            <key>
                <column name="contragentid"/>
            </key>
            <one-to-many not-found="ignore" class="ru.trustsoft.Bases"/>
        </set>
        <set name="usersById" inverse="true">
            <key>
                <column name="contragentid"/>
            </key>
            <one-to-many not-found="ignore" class="ru.trustsoft.Users"/>
        </set>
    </class>
</hibernate-mapping>